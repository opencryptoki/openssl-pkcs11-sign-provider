# SPDX-License-Identifier: Apache-2.0

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 8

[*.{c,h,ac,am,sh}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
